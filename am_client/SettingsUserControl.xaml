<UserControl
    x:Class="am_client.SettingsUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:am_client"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel  Margin="10" x:Name="settings">
                <StackPanel.Resources>
                    <Style TargetType="TextBlock" BasedOn="{StaticResource BasicTextStyle}"/>
                </StackPanel.Resources>
                <TextBlock Text="Server Path"/>
                <TextBox Name="input_server"/>
                <TextBlock Text="Connection Timeout"/>
                <TextBox   Name="input_connection_timeout"/>
                <TextBlock Text="User Name"/>
                <TextBox   Name="input_username"/>
                <TextBlock Text="Password"/>
                <TextBox   Name="input_password"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
